<Window x:Class="SeeloewenMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeeloewenMapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="819">
    <Canvas>
        <TextBlock x:Name="tblHeader" HorizontalAlignment="Left" Margin="18,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="608" FontSize="20" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" FontWeight="DemiBold">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.247"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.052"/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="SeeloewenMapper"/><Run Language="de-de" Text=" Development Build 30.12.2025"/></TextBlock>
        <TabControl Grid.RowSpan="2" Height="378" Canvas.Left="16" Canvas.Top="46" Width="774">
            <TabItem Header="Controllers">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Device Configuration">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="rtbLog" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="774" Height="356" AcceptsReturn="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
    </Canvas>
</Window>
