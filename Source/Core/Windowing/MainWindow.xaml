<Window x:Class="SeeloewenMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeeloewenMapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="819" Closing="Window_Closing">
    <Canvas>
        <TextBlock x:Name="tblHeader" HorizontalAlignment="Left" Margin="18,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="608" FontSize="20" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" FontWeight="DemiBold" Text="SeeloewenMapper">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.247"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.052"/>
                </TransformGroup>
            </TextBlock.RenderTransform></TextBlock>
        <TabControl x:Name="tcMain" Grid.RowSpan="2" Height="378" Canvas.Left="16" Canvas.Top="46" Width="774">
            <TabItem Header="Controllers">
                <Frame Background="#FFE5E5E5" Name="frControllers" Content="Use log to see connected controllers">
                </Frame>
            </TabItem>
            <TabItem Header="Device Configuration">
                <Frame Background="#FFE5E5E5" Name="frDeviceConfig" Content="Soon available">
                </Frame>
            </TabItem>
            <TabItem Header="Settings">
                <Frame Background="#FFE5E5E5" Name="frSettings" Content="Soon available">
                </Frame>
            </TabItem>
            <TabItem Header="Log">
                <Frame Name="frLog" Background="#FFE5E5E5" Source="MainPages/LogPage.xaml">
                </Frame>
            </TabItem>
            <TabItem Header="About">
                <Frame Name="frAbout" Content="By Seeloewen - Uses ViGEmBusClient by Nefarius and HidSharp by James F. Bellinger" Background="#FFE5E5E5">
                </Frame>
            </TabItem>
        </TabControl>
    </Canvas>
</Window>
