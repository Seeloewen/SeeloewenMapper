<Page x:Class="SeeloewenMapper.Core.Windowing.MainPages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeeloewenMapper.Core.Windowing.MainPages"
      mc:Ignorable="d"
      Title="LogPage" Height="355" Width="774">

    <Canvas>
        <Button Name="btnCopy" Content="Copy" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="76" Height="20" FontSize="12" Click="btnCopy_Click"/>
        <Button Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="91,3,0,0" VerticalAlignment="Top" Width="76" Height="20" FontSize="12" Click="btnClear_Click"/>
        <StackPanel Name="stpLog" Focusable="False" Height="327" Width="774" HorizontalAlignment="Center" Canvas.Top="28" VerticalAlignment="Top" Background="White"/>
        <CheckBox Name="cbVerboseMessages" Content="Show verbose messages" Canvas.Left="181" Canvas.Top="5" Click="cbVerboseMessages_Click"/>
    </Canvas>
</Page>
